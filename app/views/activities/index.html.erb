<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
<p id="notice"><%= notice %></p>
 <div class="head-login text-center">
    <div class=" p-3 d-flex justify-content-between"> 
     <%= link_to dashboard_path do %><i class="fa fa-bars fa-2x "></i><%end%>
        <h2><strong>Activities</strong></h2>
     <i class="fa fa-search fa-2x"></i>
    </div>
    <p >Most recent</p>
    </div>

  <div class="row">
    <div class="col-12 p-2 border border-1 ps-3 pe-3">
 <h5 class="card-title">TOTAL MINS<span class="like"><%= @activities.sum(:amount).round(2) %>&nbsp;mins.</span></h5>
</div>
</div>


<% @activities.each do |activity| %>
         <%= link_to activity do %>
  <div class="row p-2 m-3 border border-1">
  
    <div class="col-4 ">
      <%= insert_activity_icon(activity)%>
 
  </div>
  
    <div class="col-8">
     
      <h5><%= activity.name %><span class="like"><%= activity.amount %></span></h5>
      <p><small class="text-muted"><%= activity.created_at.strftime("%b %d, %H:%M, %Y") %></small></p>
       </div>
       </div>
      <% end %>
       <% end %>
   



<br>

<div class="d-grid gap-2 m-3">
<%= link_to 'New Activity', new_activity_path, class: " m-4 p-4 btn btn-outline-light"%>
  
</div>